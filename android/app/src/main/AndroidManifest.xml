<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ayautilities.misc.games.fallingbricks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    
  	<supports-screens android:largeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ayautilities.misc.games.fallingbricks.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/activity_levels_title" android:name="com.ayautilities.misc.games.fallingbricks.LevelActivity" android:exported="false">            
        </activity>
        <activity android:label="@string/activity_help_title" android:name="com.ayautilities.misc.games.fallingbricks.HelpActivity" android:exported="false"></activity>
        <activity android:label="@string/activity_high_scores_title" android:name="com.ayautilities.misc.games.fallingbricks.HighScoresActivity" android:exported="false"></activity>
        <activity android:label="@string/activity_about_title" android:name="com.ayautilities.misc.games.fallingbricks.AboutActivity" android:exported="false">
        </activity>
        <activity android:exported="false" android:name="com.ayautilities.misc.games.fallingbricks.GameActivity"
             android:configChanges="keyboardHidden|orientation|screenSize"
             android:theme="@android:style/Theme.NoTitleBar">            
        </activity>
    </application>

</manifest>
